	Return mat.m[x, y]
EndFunction 

Function Print(mat As Matrix4)
	for j = 0 to 3
		Write "["
		for i = 0 to 3
		Write mat.m[i, j]
		if i <> 3 then Write ", "
		next i
		Write "]"
		Print
	next j
	Print
EndFUnction 